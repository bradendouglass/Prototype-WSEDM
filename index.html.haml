  %body
    .container
      #header= render '_header.html.haml'
      #content
        .row
          -#This is a centering hack, find a better solution!!!!!
          .eight.columns.push-two
            %img{:src => '/Users/Griff/Dropbox/Design/Wireframin/banner_728x210.gif', :alt => 'Overflow: Hidden No More'}
